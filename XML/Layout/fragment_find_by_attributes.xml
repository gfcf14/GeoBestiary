<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.com.example.android.geobestiary.FindByAttributesActivityFragment"
    tools:showIn="@layout/activity_find_by_attributes">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Find Animal by Attributes:"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnFindByLimbs"
        android:layout_alignParentStart="true"
        android:spinnerMode="dialog"
        android:entries="@array/LimbItems"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView5" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnFindByLocation"
        android:layout_alignParentStart="true"
        android:spinnerMode="dialog"
        android:entries="@array/LocationItems"
        android:layout_below="@+id/spnFindByLimbs"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Animal"
        android:id="@+id/btnFindByAttributes"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/spnFindByLocation"
        android:layout_alignParentLeft="true"/>

</RelativeLayout>
